# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# API Configuration
API_PREFIX=/api/v1
API_VERSION=1.0.0

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_MAX=300
RATE_LIMIT_WINDOW=1 minute

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/gofindme?schema=public"

# Authentication (Auth0)
AUTH0_ISSUER_BASE_URL=https://your-domain.auth0.com
AUTH0_AUDIENCE=https://api.gofindme.com

# Readme.com Integration (optional)
README_API_KEY=

# Auth0 Configuration (for phone app authentication)
# Use either AUTH0_DOMAIN or AUTH0_ISSUER_BASE_URL
AUTH0_DOMAIN=your-tenant.auth0.com
# OR
# AUTH0_ISSUER_BASE_URL=https://your-tenant.auth0.com
AUTH0_AUDIENCE=https://api.gofindme.com

# Internal API Configuration (for Next.js frontend)
INTERNAL_API_PREFIX=/api/internal
